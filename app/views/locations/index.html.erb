<div class="page-header"><h3> <%= link_to "Create New Location", new_location_path %> </h3></div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zip Code</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |l| %>
    <tr>
      <td> <%= link_to l.name, location_path(l) %> </td>
      <td> <%= l.address %> </td>
      <td> <%= l.zipcode %> </td>
      <td class="text-right">
        <%= link_to "Delete", l, class: "btn btn-danger", method: :delete %>
        <%= link_to "Edit", edit_location_path(l), class: "btn btn-info" %>
        <%= link_to "Create Event", new_location_event_path(l), class: "btn btn-default"  %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
