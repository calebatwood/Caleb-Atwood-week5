<div class="page-header"><div class="pull-right"><%= link_to "Edit Location", edit_location_path, class: "btn btn-info" %></div>
  <h2><%=@location.name%></h2></div>

  <ol class="breadcrumb">
    <li><%= link_to "Home", root_url %></li>
    <li class="active"> <%= @location.name %> </li>
  </ol>

<dl class="dl-horizontal">
<dt>Name</dt>
<dd><%= @location.name %></dd>
<dt>Address</dt>
<dd><%= @location.address %></dd>
<dt>Zip Code</dt>
<dd><%= @location.zipcode %></dd>
</dl>

<h3>Events:</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Requires ID?</th>
    </tr>
  </thead>
  <tbody>
    <% @location.events.each do |e| %>
    <tr>
      <td> <%= link_to e.description, location_event_path(@location, e) %> </td>
      <td> <%= e.date %> </td>
      <td> <%= e.requires_id %> </td>
      <td class="text-right">
        <%= link_to "Delete", location_event_path(@location, e), class: "btn btn-danger", method: :delete %>
        <%= link_to "Edit", edit_location_event_path(@location, e), class: "btn btn-info" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
