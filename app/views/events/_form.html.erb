<%= form_for [@location, @event] do |f| %>

<form class="form-horizontal">
  <div class="form-group">
      <%= f.label :description, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
<br>
<br>
  <div class="form-group">
      <%= f.label :date, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.date_select :date, class: "form-control" %>
    </div>
  </div>
<br>
<br>
  <div class="form-group">
      <%= f.label :requires_id, "Requires ID", class: "control-label col-md-2" %>
    <div class="form-controls col-md-1">
      <%= f.check_box :requires_id, class: "form-control" %>
    </div>
  </div>

<br>
<br>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-4">
      <%= f.submit class: "btn btn-primary"%>
      <%= link_to "Cancel", locations_path, class: "btn btn-default"%>
    </div>
  </div>
  <% end %>
</form>
